extends layout

block content
  div(class='uk-grid-7-10 uk-container uk-container-center')
    div(class='body-column', ng-controller="DashboardController")
      button(class='uk-button showFormBtn', ng-click='createForm.show()') Create
      div(class='new-broadcast-form')
        h2 Create Broadcast
        form
          div(class="uk-form-row")
            input(type="text", name="name", placeholder="Name", ng-model="createForm.name")
          div(class="uk-form-row")
            input(type="text", name="uri", placeholder="YouTube Link", ng-model="createForm.uri")
          div(class="uk-form-row")
            button(class="uk-button", ng-click="createForm.submit()") Create
            button(class="uk-button", ng-click="createForm.submitAndOpen()") Create & Open
            button(class="uk-button", ng-click="createForm.cancelForm()") Cancel

      h2 Broadcasts
      table(class='uk-table broadcasts-table uk-table-striped')
        tbody
          tr(ng-repeat="broadcast in broadcasts")
            td(class='uk-width-6-10 uk-text-bold'): a(href="/broadcast/{{broadcast._id}}") {{ broadcast.name }}
            td(class='uk-text-left') {{ broadcast.last_update | date : "MMM d, yyyy h:mm a" }}
            td(class='uk-text-right'): button(class="uk-button") Edit
            td(class='uk-text-left'): button(class="uk-button uk-button-danger", ng-click="delete(broadcast._id)") Delete
