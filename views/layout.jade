doctype html
html(ng-app='broadcastsApp')
  head
    title= title

    // uikit
    link(rel='stylesheet', href='/lib/uikit/css/uikit.min.css')
    
    // local
    link(rel='stylesheet', href='/stylesheets/style.css')

    // codemirror
    link(rel="stylesheet" href="/lib/codemirror/lib/codemirror.css")

    // html editor
    link(rel="stylesheet", href="/lib/uikit/css/components/htmleditor.css")

    // jquery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")

    // uikit
    script(src="/lib/uikit/js/uikit.min.js")

    // Codemirror and marked dependencies
    script(src="/lib/codemirror/lib/codemirror.js")
    script(src="/lib/codemirror/mode/markdown/markdown.js")
    script(src="/lib/codemirror/addon/mode/overlay.js")
    script(src="/lib/codemirror/mode/xml/xml.js")
    script(src="/lib/codemirror/mode/gfm/gfm.js")
    script(src="/lib/marked/marked.js")

    // html editor
    script(src="/lib/uikit/js/components/htmleditor.js")

    // angular
    script(src="/lib/angular/angular.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular-cookies.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-sanitize.min.js")

    // local
    script(src="/javascripts/config.js")
    script(src="/javascripts/controllers.js")

  body
    div(class='uk-navbar')
      a(class='uk-navbar-brand') Broadcasts
      div(class="uk-navbar-content")
        a(class="uk-button", href="/dashboard") Dashboard
      div(class="uk-navbar-content uk-navbar-flip uk-hidden-small")
        a(class="uk-button", href="#")=everyauth.user.name
    div(class='uk-grid')
      block content
